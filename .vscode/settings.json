{
  // --- Ferramentas (tools) ---
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk-xelatex-bibtex",
      "command": "latexmk",
      "args": [
        "-f",
        "-xelatex",              // usa XeLaTeX
        "-bibtex",               // chama bibtex
        "-synctex=1",            // gera .synctex.gz
        "-interaction=nonstopmode",
        "-file-line-error",        // gera tudo em ./build
        "%DOCFILE%"                 
      ]
    }
  ],

  // --- Receitas (recipes) ---
  "latex-workshop.latex.recipes": [
    {
      "name": "XeLaTeX + BibTeX (latexmk)",
      "tools": [
        "latexmk-xelatex-bibtex"
      ]
    }
  ],
  // --- Visualização interna de PDF ---
  "latex-workshop.view.pdf.viewer": "tab",
}
